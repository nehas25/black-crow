<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <title>Shop Crows</title>
  </head>
  <body data-page="items">
    <div class="container">
      <div data-page-items="<%= JSON.stringify(allCrows) %>"></div>
      <%- include('../partials/header.ejs') %>
      <div class="row" style="margin-top: 5%">
        <% for(const crow of allCrows) { %>
          <div id="<%= crow.htmlId %>" class="one-third column" data-item-id="<%= crow.id %>">
            <img class="u-max-full-width" src="/images/<%= crow.imgName %>">
            <h4><%= crow.name %></h4><h5><%= crow.priceFormatted %></h5>
            <button class="button-primary add-to-cart-btn" data-price="<%= crow.price %>">Add To Cart</button>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>